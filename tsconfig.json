{
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "target": "ES5",
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["es2015", "es2017"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true
  },
  "include": [
    "src/**/*",
    "types/promise-events.d.ts"
  ],
  "exclude": ["./node_modules"]
}
